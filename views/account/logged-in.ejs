<%# Content Heading %>
<% if (title) { %>
    <h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => { %>
            <li><%= error.msg %></li>
        <%  }) %>
   </ul>
<% } %>

<h2>Welcome <%= locals.accountData.account_firstname %></h2>
<p><a href="/account/update-account/<%= locals.accountData.account_id%>">Update Account information</a></p>
<% if(locals.accountData.account_type != 'Client') { %>
    <h3>Inventory Management</h3>
    <p><a href="/inv">Link</a></p>
<% } %>