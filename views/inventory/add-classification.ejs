<%# Content Heading %>
<% if (title) { %>
    <h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>


<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

<form class="classForm" action="/inv/add-classification" method="post">
    <label for="classification_name">Classification Name:</label><br>
    <input type="text" name="classification_name" id="classification_name" required pattern="^[a-zA-Z]+$">
    <p>NAME MUST BE ALPHABETIC CHARACTERS ONLY</p>
    <button type="submit" class="formButton">Submit</button>
</form>