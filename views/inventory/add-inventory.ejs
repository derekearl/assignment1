<%# Content Heading %>
<% if (title) { %>
    <h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>


<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
    <%  }) %>
   </ul>
<% } %>

<form class="carForm" action="/inv/add-inventory" method="post">
    <label for="inv_make">Make:</label><br>
    <input type="text" name="inv_make" id="inv_make" required pattern="^[a-zA-Z ]+$" value="<%= locals.inv_make %>"><br><br>
    <label for="inv_model">Model:</label><br>
    <input type="text" name="inv_model" id="inv_model" required pattern="^[a-zA-Z ]+$" value="<%= locals.inv_model %>"><br><br>
    <label for="inv_year">Year:</label><br>
    <input type="text" name="inv_year" id="inv_year" required pattern="^[0-9]+$" value="<%= locals.inv_year %>" minlength="4" maxlength="4"><br><br>
    <label for="inv_description">Description:</label><br>
    <textarea name="inv_description" id="inv_description" rows="10" cols="30" required><%= locals.inv_description %></textarea><br><br>
    <label for="inv_image">Image:</label><br>
    <input type="text" name="inv_image" id="inv_image" required value="/images/vehicles/no-image.png" pattern="/images/vehicles/no-image.png"><br><br>
    <label for="inv_thumbnail">Thumbnail:</label><br>
    <input type="text" name="inv_thumbnail" id="inv_thumbnail" required value="/images/vehicles/no-image-tn.png" pattern="/images/vehicles/no-image-tn.png"><br><br>
    <label for="inv_price">Price:</label><br>
    <input type="text" name="inv_price" id="inv_price" required pattern="^[0-9.]+$" value="<%= locals.inv_price %>"><br><br>
    <label for="inv_miles">Miles:</label><br>
    <input type="text" name="inv_miles" id="inv_miles" required pattern="^[0-9]+$" value="<%= locals.inv_miles %>"><br><br>
    <label for="inv_color">Color:</label><br>
    <input type="text" name="inv_color" id="inv_color" required pattern="^[a-zA-Z]+$" value="<%= locals.inv_color %>"><br><br>
    <label for="classification_id">Classification:</label><br>
    <%- dropDown %><br><br>
    <button type="submit" class="formButton">Add Car</button>
</form>